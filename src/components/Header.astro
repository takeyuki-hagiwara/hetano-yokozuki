---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="w-full bg-white/90 backdrop-blur-md sticky top-0 z-50 border-b border-slate-100 shadow-sm">
	<nav class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
		
		<h2 class="m-0 text-xl font-bold tracking-tighter">
			<a href="/" class="text-slate-800 hover:text-blue-600 transition-colors no-underline">
				{SITE_TITLE}
			</a>
		</h2>

		<div class="flex gap-4 md:gap-6 text-sm font-medium">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			</div>

	</nav>
</header>