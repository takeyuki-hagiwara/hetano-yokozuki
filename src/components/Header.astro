---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="w-full bg-white/95 backdrop-blur-sm border-b border-slate-100 sticky top-0 z-50">
	<nav class="flex items-center justify-between w-full max-w-5xl mx-auto px-4 py-4">
		
		<h2 class="text-xl font-bold m-0 leading-none">
			<a href="/" class="text-slate-800 no-underline hover:text-blue-600 transition-colors">
				{SITE_TITLE}
			</a>
		</h2>

		<div class="flex gap-4 text-sm font-medium">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

	</nav>
</header>