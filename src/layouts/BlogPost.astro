---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { MarkdownHeading } from 'astro';

type Props = CollectionEntry<'blog'>['data'] & {
	headings?: MarkdownHeading[];
};

const { title, description, pubDate, updatedDate, headings } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.prose h2 {
				border-left: 5px solid #cbd5e1;
				padding-left: 0.75em;
				margin-top: 2.5em;
				margin-bottom: 1em;
			}
			.prose h3 {
				border-bottom: 2px solid #e2e8f0;
				padding-bottom: 0.3em;
				margin-top: 2em;
			}
			.prose strong {
				background: linear-gradient(transparent 60%, #fef08a 60%);
			}
			.prose figure { text-align: center; }
			.prose figcaption { color: #64748b; font-size: 0.875em; margin-top: 0.5em; }

            /* スマホ専用の強制折り返し */
            @media (max-width: 767px) {
                p, h1, h2, h3, h4, li, a {
                    overflow-wrap: anywhere;
                    word-break: break-word;
                }
            }
		</style>
	</head>

	<body class="bg-[#fcfcfc] text-slate-800 font-sans tracking-widest leading-loose">
		<Header />
		
		<main class="mt-4 mb-24 md:mt-12">
			<article>
				<header class="max-w-3xl mx-auto px-2 md:px-0 mb-8 md:mb-12 text-center">
					<div class="mb-4 text-sm font-mono text-slate-400">
						<time datetime={pubDate.toISOString()}>
							{pubDate.toLocaleDateString('ja-JP')}
						</time>
						{updatedDate && <span class="ml-2 italic">(Updated: {updatedDate.toLocaleDateString('ja-JP')})</span>}
					</div>
					<h1 class="text-2xl md:text-4xl font-extrabold tracking-tight text-slate-900 leading-tight mb-6">
						{title}
					</h1>
					<hr class="border-slate-200 w-12 mx-auto" />
				</header>

				{headings && headings.length > 0 && (
					<nav class="max-w-3xl mx-auto px-2 md:px-0 my-8">
						<div class="bg-slate-50 p-4 md:p-5 rounded-xl border border-slate-200">
							<p class="font-bold text-slate-500 mb-3 text-sm tracking-widest">INDEX</p>
							<ul class="space-y-2 text-sm text-slate-600">
								{headings.map((heading) => (
									heading.depth === 2 && (
										<li class="hover:text-blue-600 transition-colors">
											<a href={`#${heading.slug}`}># {heading.text}</a>
										</li>
									)
								))}
							</ul>
						</div>
					</nav>
				)}