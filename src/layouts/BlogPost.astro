			/* 見出しのデザイン調整 */
			.prose h2 {
				border-left: 5px solid #cbd5e1;
				padding-left: 0.75em;
				margin-top: 2.5em;
				margin-bottom: 1em;
			}
			.prose h3 {
				border-bottom: 2px solid #e2e8f0;
				padding-bottom: 0.3em;
				margin-top: 2em;
			}
			.prose strong {
				background: linear-gradient(transparent 60%, #fef08a 60%);
			}
			
			/* 画像のキャプション（figcaption）を中央寄せにする */
			.prose figure {
				text-align: center;
			}
			.prose figcaption {
				color: #64748b;
				font-size: 0.875em;
				margin-top: 0.5em;
			}
		</style>
	</head>

